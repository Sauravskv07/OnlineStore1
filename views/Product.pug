doctype html
html
    head
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        style
            include styleProduct.css
        script(src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js")
        script(src="/public/javascripts/buyProduct.js")
    body
        h1 #{product.itemName}
        .row
            div.col_12
                -var imageLocation="http://localhost:3000/public/assets/images/"+product.itemImage
                -var productId=product._id
                img(src=imageLocation class="Main_product_img")
            div.col_12
                p() Name Of Seller:  #{product.sellerName}
                p() Email Of Seller:  #{product.sellerEmail}
                p() Product Description:  #{product.itemDescription}
                p() Quantity Of Product#{product.itemQuantity}
                a(href=("http://localhost:3000/BuyAProduct/"+productId))
                    button(id=productId) Cart
